#= require_self
#= require_tree ./services
#= require_tree ./filters
#= require_tree ./controllers
#= require_tree ./directives

Dashboard = angular.module('Dashboard', ['ngRoute', 'chart.js'])

Dashboard.config(['$routeProvider', '$locationProvider', ($routeProvider, $locationProvider) ->
  $locationProvider.html5Mode(true)

  $routeProvider.when '/',
    templateUrl: "<%= asset_path('dashboard.html') %>"
    controller: 'DashboardCtrl'

  $routeProvider.when '/details/:sensor_id',
    templateUrl: "<%= asset_path('sensor_detail.html') %>"
    controller: 'SensorDetailCtrl'

  $routeProvider.when '/about',
    templateUrl: "<%= asset_path('about.html') %>"

  Chart.defaults.global.animation = false
  Chart.defaults.global.showTooltips = false
  Chart.defaults.global.scaleIntegersOnly = false
  
])